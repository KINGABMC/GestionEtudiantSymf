{% extends 'base.html.twig' %}

{% block customStylesheet %}
 #employe_isArchived {
    display: flex;
    gap: 1.5rem;
}
{% endblock %}

{% block body %}
<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
      <h3>Formulaire d'Employé</h3>
  </div>

  <div class="card border-0 shadow-sm">
    <div class="card-body">
      
      {# ✅ Début du formulaire #}
      {{ form_start(formEmpt, {'attr': {'novalidate': 'novalidate', 'data-turbo': 'false'}}) }}
      
      {# ✅ Affichage des erreurs globales (formulaire) #}
      {% if form_errors(formEmpt) %}
          <div class="alert alert-danger">
              {{ form_errors(formEmpt) }}
          </div>
      {% endif %}
      
      {# ✅ Champs du formulaire avec erreurs individuelles #}
      <div class="mb-3">
          {{ form_label(formEmpt.nomComplet) }}
          {{ form_widget(formEmpt.nomComplet) }}
          {{ form_errors(formEmpt.nomComplet) }}
      </div>

      <div class="mb-3">
          {{ form_label(formEmpt.telephone) }}
          {{ form_widget(formEmpt.telephone) }}
          {{ form_errors(formEmpt.telephone) }}
      </div>

      <div class="mb-3">
          {{ form_label(formEmpt.adresse) }}
          {{ form_widget(formEmpt.adresse) }}
          {{ form_errors(formEmpt.adresse) }}
      </div>

      <div class="mb-3">
          {{ form_label(formEmpt.embaucheAt) }}
          {{ form_widget(formEmpt.embaucheAt) }}
          {{ form_errors(formEmpt.embaucheAt) }}
      </div>

      <div class="mb-3">
          {{ form_label(formEmpt.isArchived) }}
          {{ form_widget(formEmpt.isArchived) }}
          {{ form_errors(formEmpt.isArchived) }}
      </div>

      <div class="mb-3">
          {{ form_label(formEmpt.departement) }}
          {{ form_widget(formEmpt.departement) }}
          {{ form_errors(formEmpt.departement) }}
      </div>

      <div class="mb-3">
          {{ form_label(formEmpt.pays) }}
          {{ form_widget(formEmpt.pays) }}
          {{ form_errors(formEmpt.pays) }}
      </div>

      <div class="mb-3">
          {{ form_label(formEmpt.ville) }}
          {{ form_widget(formEmpt.ville) }}
          {{ form_errors(formEmpt.ville) }}
      </div>
      <div class="mb-3">
               {{ form_label(formEmpt.rue) }}
               {{ form_widget(formEmpt.rue) }}
               {{ form_errors(formEmpt.rue) }}
      </div>

      <div class="mb-3">
          {{ form_label(formEmpt.photoFile, 'Photo de l\'employé') }}
          {{ form_widget(formEmpt.photoFile) }}
          {{ form_errors(formEmpt.photoFile) }}
      </div>
      {# ✅ Bouton d’enregistrement #}
      <div class="mt-3 text-end">
          {{ form_widget(formEmpt.submit) }}
      </div>

      {{ form_end(formEmpt) }}
      {# ✅ Fin du formulaire #}

    </div>
  </div>
</div>
{% endblock %}
