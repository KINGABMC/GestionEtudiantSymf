{% extends 'base.html.twig' %}
  {% block body %}<div class="container py-4">
  <!-- En-tête avec titre et formulaire de création -->
  <div class="row mb-4">
    <div class="col-md-6">
      <h1 class="h3 mb-3">Liste des Employés  {% if departement %}du {{ departement.name }}{% else %}des départements{% endif %}</h1>
      <div class="col-md-3">
        {% if is_granted('ROLE_ADMIN') %}
              <a href="{{ path('app_employe_add') }}" class="btn btn-primary" type="button">
                <i class="fas fa-plus me-1"></i>Ajouter
              </a>
       </div>
      <!-- Formulaire de création d'employé -->
      {% endif %}
   </div>

    <div class="card">
  <div class="card-body">
    <form method="get" action="{{ path('app_employe_list') }}">
      <div class="row g-2 align-items-end">
        <!-- Recherche par numéro -->
        <div class="col-md-3">
          <input type="text" class="form-control" name="searchId" placeholder="Recherche par numéro" value="{{ app.request.get('searchId') }}">
        </div>

        <!-- Filtre par statut -->
        <div class="col-md-3">
          <select class="form-select" name="statut" onchange="this.form.submit()">
            <option value="">Tous les statuts</option>
            <option value="actif" {% if (selectedStatut ?? '') == 'actif' %}selected{% endif %}>Actifs</option>
            <option value="archive" {% if (selectedStatut ?? '') == 'archive' %}selected{% endif %}>Archivés</option>
          </select>
        </div>

       <!-- Filtre par département -->
        <div class="col-md-3">
          <select class="form-select" name="idDept" onchange="this.form.submit()">
            <option value="">Tous les départements</option>
            {% for dept in departements %}
              <option value="{{ dept.id }}" {% if dept.id == (selectedDeptId|default('')) %}selected{% endif %}>{{ dept.name }}</option>
            {% endfor %}
          </select>
        </div>


        <!-- Bouton rechercher -->
        <div class="col-md-3">
          <button type="submit" class="btn btn-primary w-100">
            <i class="fas fa-search me-1"></i>Rechercher
          </button>
        </div>
      </div>
    </form>
  </div>
</div>


  <!-- Tableau des employés -->
  <div class="card">
    <div class="card-body p-0">
    {% if employes|length > 0 %}
    {% include 'components/messageflash.html.twig' with {'messages': app.flashes()} %}
      <div class="table-responsive">
        <table class="table table-hover mb-0" id="employeesTable">
          <thead class="table-light">
            <tr>
              <th scope="col" class="border-0">Photo</th>
              <th scope="col" class="border-0">Numéro</th>
              <th scope="col" class="border-0">Nom et prenom</th>
              <th scope="col" class="border-0">Telephone</th>
              <th scope="col" class="border-0">Date d'embauche</th>
              <th scope="col" class="border-0">Département</th>
              <th scope="col" class="border-0">Statut</th>
              <th scope="col" class="border-0 text-center">Actions</th>
            </tr>
          </thead>
          <tbody>
            {% for employe in employes %}
            <tr>
                <td>
                <img src="{{ asset('uploads/photos/' ~ employe.photo) }}" alt="{{ employe.nomComplet }}" class="rounded" style="width: 10px; height: 100px; object-fit: cover; margin-right: 10px;">
                </td>
              <td >{{ employe.id }}</td>
               <td >{{ employe.nomComplet }}</td>
                <td >{{ employe.telephone }}</td>
                <td >{{ employe.createAt|date('d/m/Y') }}</td>
                <td >{{ employe.departement.name }}</td>
               <td>
                      {% if employe.isArchived %}
                        <span class="badge bg-secondary">Archivé</span>
                      {% else %}
                        <span class="badge bg-success">Actif</span>
                      {% endif %}
              </td>
                <td class="text-center"> 
                <div class="btn-group" role="group">
                  <a href="#" type="button" class="btn btn-outline-primary btn-sm">
                    <i class="fas fa-pencil-alt me-1"></i>Éditer
                  </a>
                  <a href="#" type="button" class="btn btn-outline-danger btn-sm">
                    <i class="fas fa-trash me-1"></i>Supprimer
                  </a>
               </div>
              </td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Pagination -->
  <div class="d-flex justify-content-center mt-4">
     {% if departement is defined and departement %}
    {% include 'components/pagination.html.twig' with {
      'nbrPages': nbrPages,
      'currentPage': currentPage,
      'pathname': 'app_employe_by_departement',
      'extraParams': {'id': departement.id, 'statut': selectedStatut ?? ''}
    } %}
  {% else %}
    {% include 'components/pagination.html.twig' with {
      'nbrPages': nbrPages,
      'currentPage': currentPage,
      'pathname': 'app_employe_list',
      'extraParams': extraParams
    } %}
  {% endif %}
   {% else %}
     {% if departement %}
        <div
          class="alert alert-danger" role="alert" > Aucun employé trouvé dans le département {{ departement.name }}. </div>
      {% else %}
    <div
        class="alert alert-danger" role="alert" > ce département n'existe pas. </div>

    {% endif %}
  {% endif %}
  </div>
</div>{% endblock %}
