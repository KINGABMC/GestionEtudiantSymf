{% extends 'base.html.twig' %}

{% block title %}Comparateur d'Écoles - Orientation{% endblock %}

{% block body %}
<div class="container py-4">
    <h2 class="h3 mb-4">
        <i class="bi bi-bar-chart me-2"></i>Comparateur d'Écoles
    </h2>

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <form method="get" action="{{ path('app_orientation_comparateur') }}">
                <h5 class="h6 mb-3">Sélectionnez jusqu'à 4 écoles à comparer</h5>
                <div class="row g-3 mb-3">
                    {% for ecole in ecoles %}
                        <div class="col-md-6 col-lg-3">
                            <div class="form-check">
                                <input
                                    class="form-check-input"
                                    type="checkbox"
                                    name="ecoles[]"
                                    value="{{ ecole.id }}"
                                    id="ecole{{ ecole.id }}"
                                    {% if app.request.query.all('ecoles') and ecole.id in app.request.query.all('ecoles') %}checked{% endif %}
                                >
                                <label class="form-check-label" for="ecole{{ ecole.id }}">
                                    {{ ecole.nom }}
                                </label>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-shuffle me-2"></i>Comparer
                </button>
            </form>
        </div>
    </div>

    {% if comparaison %}
        <div class="card border-0 shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>École</th>
                                <th>Type</th>
                                <th>Coût scolarité</th>
                                <th>Taux insertion</th>
                                <th>Filières</th>
                                <th>Statut</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for data in comparaison %}
                                <tr>
                                    <td>
                                        <a href="{{ path('app_orientation_ecole_detail', {id: data.ecole.id}) }}">
                                            {{ data.ecole.nom }}
                                        </a>
                                    </td>
                                    <td>
                                        <span class="badge bg-{{ data.type == 'public' ? 'success' : 'info' }}">
                                            {{ data.type|upper }}
                                        </span>
                                    </td>
                                    <td>{{ data.cout|number_format(0, ',', ' ') }} FCFA</td>
                                    <td>
                                        <strong class="text-{{ data.tauxInsertion >= 70 ? 'success' : 'warning' }}">
                                            {{ data.tauxInsertion }}%
                                        </strong>
                                    </td>
                                    <td>{{ data.nombreFilieres }}</td>
                                    <td>
                                        {% if data.estVerifiee %}
                                            <i class="bi bi-patch-check-fill text-primary"></i> Vérifiée
                                        {% else %}
                                            <span class="text-muted">Non vérifiée</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
